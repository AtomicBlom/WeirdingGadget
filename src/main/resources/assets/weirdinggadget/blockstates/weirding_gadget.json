{
  "multipart": [
    {
      "when": {
        "active": "false"
      },
      "apply": [
        {"model": "weirdinggadget:block/sschunkloader"},
        {"model": "weirdinggadget:block/sschunkloader_spinner"}
      ]
    },
    {
      "when": {
          "active": "true",
          "render": "static"
      },
      "apply": [
        {"model": "weirdinggadget:block/sschunkloader"}
      ]
    },
    {
      "when": {
        "active": "true",
        "render": "dynamic"
      },
      "apply": [
        {"model": "weirdinggadget:block/sschunkloader_spinner"}
      ]
    }
  ]
}